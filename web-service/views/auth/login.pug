extends layout

block content
    main(class="form-signin",method="post",action="/auth")
        form()
            img(class="mb-4",src="/assets/brand/bootstrap-logo.svg",alt="",width="72",height="57")
            h1(class="h3 mb-3 fw-normal") Please sign in

            div(class="form-floating")
                input(type="email",class="form-control",id="floatingInput",placeholder="name@example.com")
                label(for="floatingInput") Email address
        
            div(class="form-floating")
                input(type="password",class="form-control",id="floatingPassword",placeholder="Password")
                label(for="floatingPassword") Password

            div(class="checkbox mb-3")
                input(type="checkbox",value="remember-me") 
                label &nbsp;Remember me
            
        
            button(class="w-100 btn btn-lg btn-primary",type="submit") Sign in
            p(class="mt-5 mb-3 text-muted") &copy; 2021